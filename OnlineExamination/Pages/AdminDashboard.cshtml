@page
@model OnlineExamination.Pages.AdminDashboardModel
@{
     ViewData["Title"] = "Admin Dashboard";
	 Layout = "_AdminLayout";
}

<div class="d-flex">
    <!-- Sidebar -->
    <nav class="sidebar bg-white vh-100 d-flex flex-column p-3 shadow-lg">
        <button class="btn btn-outline-primary mb-3 d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-expanded="false" aria-controls="sidebarMenu">
            Admin
        </button>
        <div class="collapse d-md-block" id="sidebarMenu">
            <ul class="nav flex-column">
                <li class="nav-item mb-3">
                    <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/AdminDashboard" ? "active" : "")" href="/AdminDashboard">
                        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/ManageQuizzes" ? "active" : "")" href="/ManageQuizzes">
                        <i class="fas fa-tasks me-2"></i> Manage Quizzes 
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/ManageQuestions" ? "active" : "")" href="/ManageQuestions">
                        <i class="fas fa-question-circle me-2"></i> Manage Questions
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/ManageCourses" ? "active" : "")" href="/ManageCourses">
                        <i class="fa-regular fa-file me-2"></i> Manage Courses
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/ManageUsers" ? "active" : "")" href="/ManageUsers">
                        <i class="fas fa-users me-2"></i> Manage Users
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/Results" ? "active" : "")" href="/Results">
                        <i class="fas fa-chart-bar me-2"></i> Results
                    </a>
                </li>
            </ul>
            <div class="mt-auto">
                <a class="nav-link text-danger" href="/Logout">
                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content flex-grow-1 p-4">
        <!-- Header -->
        <h4 class="text-primary mb-4">Welcome, @Model.Username!</h4>

        <!-- Dashboard Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-tasks fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Manage Quizzes</h5>
                        <p class="card-text">Create, edit, and delete quizzes for students.</p>
                        <a href="/ManageQuizzes" class="btn btn-primary">Go to Quizzes</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-users fa-3x text-success mb-3"></i>
                        <h5 class="card-title">Manage Users</h5>
                        <p class="card-text">Add, edit, or remove users from the system.</p>
                        <a href="/ManageUsers" class="btn btn-success">Go to Users</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                        <h5 class="card-title">View Results</h5>
                        <p class="card-text">Analyze and export quiz results.</p>
                        <a href="/Results" class="btn btn-info">View Results</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activities Table -->
        <div class="recent-activities">
            <h3 class="text-primary mb-3">Recent Activities</h3>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Activity</th>
                        <th>Performed By</th>
                        <th>Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Created "Java Basics Quiz"</td>
                        <td>Admin</td>
                        <td>2024-11-25</td>
                        <td class="text-success">Completed</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Added a new user: John Doe</td>
                        <td>Admin</td>
                        <td>2024-11-26</td>
                        <td class="text-primary">Successful</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Updated quiz settings</td>
                        <td>Admin</td>
                        <td>2024-11-28</td>
                        <td class="text-info">Updated</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>